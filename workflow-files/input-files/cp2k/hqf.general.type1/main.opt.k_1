&GLOBAL
  PROJECT cp2k.out
  RUN_TYPE geo_opt
  PRINT_LEVEL medium
&END global

!&EXT_RESTART
!  EXTERNAL_FILE cp2k.out.restart.bak-1
!&END EXT_RESTART

&MOTION
  &GEO_OPT
    MAX_ITER 500
    OPTIMIZER lbfgs
  &END GEO_OPT
  &PRINT
    &TRAJECTORY on
      FORMAT pdb
      FILENAME =cp2k.out.trajectory.pdb
      &EACH
        GEO_OPT 1
      &END EACH
    &END TRAJECTORY
    &RESTART
      ADD_LAST symbolic
      BACKUP_COPIES 1
      FILENAME =cp2k.out.restart
      &EACH
        GEO_OPT 1
      &END EACH
    &END RESTART
    &RESTART_HISTORY off
    &END RESTART_HISTORY
  &END PRINT
&END MOTION

&MULTIPLE_FORCE_EVALS
  FORCE_EVAL_ORDER 2 3
  MULTIPLE_SUBSYS true
&END

&FORCE_EVAL
  STRESS_TENSOR analytical
  METHOD mixed
  &MIXED
    MIXING_TYPE genmix
    &GENERIC
      # a: H1   : Hamiltonian of system 1
      # b: H2d  : Hamiltonian of system 2 dummies
      # c: H1d  : Hamiltonian of system 1 dummies
      # d: H2   : Hamltionian of system 2
      VARIABLES c d
      MIXING_FUNCTION c+d
    &END
    @include subsystem_folder_placeholder/cp2k.in.mapping.single
  &END
  &SUBSYS
    &TOPOLOGY
      CONNECTIVITY off
      COORDINATE pdb
      COORD_FILE_NAME subsystem_folder_placeholder/system.a2c2.pdb
    &END TOPOLOGY
    &CELL
      ABC cell_dimensions_full_rounded_placeholder
    &END CELL
  &END SUBSYS
&END FORCE_EVAL

@include cp2k.in.sub.forces.H1d

@include cp2k.in.sub.forces.H2
