<simulation verbosity="high">
  <output prefix='ipi.out'>
     <properties stride="1" filename="properties" flush="1"> [step, time{femtosecond}, conserved, potential{kcal/mol}, kinetic_cv, pressure_cv{bar}, volume, temperature{kelvin}, kinetic_md, pressure_md{bar} ] </properties>
     <properties stride="1" filename="cell" flush="1"> [cell_h{angstrom}] </properties>
     <trajectory stride="1" filename="forces" format="pdb" cell_units="angstrom" flush="1"> forces </trajectory>
     <trajectory stride="1" filename="positions.bead" format="pdb" cell_units="angstrom" flush="1"> positions{angstrom} </trajectory>
     <trajectory stride="1" filename='positions.centroid' format="pdb" cell_units='angstrom' flush="1"> x_centroid{angstrom} </trajectory>     
     <checkpoint stride="1" filename="restart" overwrite="false"/>
  </output>
  <total_steps>0</total_steps>
  <prng> <seed> 32342 </seed> </prng>
  <ffsocket mode='unix' name='cp2k' pbc="true">
    <address> address_cp2k_placeholder </address>
    <latency>0.01</latency>
    <timeout>5000</timeout>
  </ffsocket>
  <system>
    <initialize nbeads='nbeads_placeholder'>
      <file mode='chk'> ipi.in.restart </file>
    </initialize>
    <forces>
      <force forcefield='cp2k'/></forces>
    <ensemble>
      <temperature units="kelvin"> temperature_placeholder </temperature>
      <pressure units='bar'> 1.0 </pressure>
    </ensemble>
    <motion mode="dynamics">
      <dynamics mode='nvt'>
        <timestep units='femtosecond'> 1 </timestep>
        <thermostat mode='langevin'>
          <tau units='femtosecond'> 10 </tau>
        </thermostat>
        <barostat mode='isotropic'>
          <tau units='femtosecond'> 500 </tau>
          <thermostat mode='langevin'>
            <tau units='femtosecond'> 500 </tau>
          </thermostat>
        </barostat>
      </dynamics>
    </motion>
  </system>
</simulation>
