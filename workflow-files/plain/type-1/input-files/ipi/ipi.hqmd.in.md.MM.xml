<simulation verbosity="high">
  <output prefix='ipi.out'>
     <properties stride="2000" filename="properties" flush="1"> [step, time{femtosecond}, conserved, potential{kcal/mol}, kinetic_cv, pressure_cv{bar}, volume, temperature{kelvin}, kinetic_md, pressure_md{bar} ] </properties>
     <properties stride="2000" filename="cell" flush="1"> [cell_h{angstrom}] </properties>
     <trajectory stride="2000" format="pdb" filename="positions" cell_units="angstrom"> positions{angstrom} </trajectory>
     <trajectory stride="2000" format="pdb" filename='positions_centroid' cell_units='angstrom'> x_centroid{angstrom} </trajectory>     
     <checkpoint stride="2000" filename="restart" overwrite="false"/>
  </output>
  <total_steps>100000000</total_steps>
  <prng> <seed> 32342 </seed> </prng>
  <ffsocket mode='unix' name='cp2k' pbc="true">
    <address>ipi.runtimeletter.md.system_basename.cp2k</address>
    <latency>0.01</latency>
    <timeout>5000</timeout>
  </ffsocket>
  <system>
    <initialize nbeads='2'>
      <file mode='pdb'>../../system1.opt.out.pdb</file>
      <momenta mode="thermal" units="kelvin"> 300 </momenta>
    </initialize>
    <forces>
      <force forcefield='cp2k'/>
    </forces>
    <ensemble>
      <temperature units="kelvin"> 300 </temperature>
      <pressure units='bar'> 1.0 </pressure>
    </ensemble>
    <motion mode="dynamics">
      <dynamics mode='npt'>
        <timestep units='femtosecond'> 1 </timestep>
        <thermostat mode='langevin'>
          <tau units='femtosecond'> 100 </tau>
        </thermostat>
        <barostat mode='isotropic'>
          <tau units='femtosecond'> 500 </tau>
          <thermostat mode='langevin'>
            <tau units='femtosecond'> 500  </tau>
          </thermostat>
        </barostat>
      </dynamics>
    </motion>
  </system>
</simulation>

