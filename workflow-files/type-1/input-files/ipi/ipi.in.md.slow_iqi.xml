<simulation verbosity="high">
  <output prefix='ipi.out.run1'>
     <properties stride="10" filename="properties" flush="1"> [step, time{femtosecond}, conserved, potential{kcal/mol}, kinetic_cv, pressure_cv{bar}, volume, temperature{kelvin}, kinetic_md, pressure_md{bar} ] </properties>
     <properties stride="10" filename="cell" flush="1"> [cell_h{angstrom}] </properties>
     <trajectory stride="10" filename="forces" format="pdb" cell_units="angstrom" flush="1"> forces </trajectory>
     <trajectory stride="10" filename="positions.bead" format="pdb" cell_units="angstrom" flush="1"> positions{angstrom} </trajectory>
     <trajectory stride="10" filename='positions.centroid' format="pdb" cell_units='angstrom' flush="1"> x_centroid{angstrom} </trajectory>     
     <checkpoint stride="10" filename="restart" overwrite="false"/>
  </output>
  <total_steps>10000000</total_steps>
  <prng> <seed> 32342 </seed> </prng>
  <ffsocket mode='unix' name='cp2k' pbc="true">
    <address> address.cp2k </address>
    <latency>0.01</latency>
    <timeout>5000</timeout>
  </ffsocket>
  <ffsocket mode='unix' name='iqi' pbc="true">
    <address> address.iqi </address>
    <latency>0.01</latency>
    <timeout>5000</timeout>
  </ffsocket>
  <system>
    <initialize nbeads='1'>
      <file mode='pdb'> subsystem_folder/system.subconfiguration.opt.pdb</file>
      <momenta mode="thermal" units="kelvin"> 300 </momenta>
    </initialize>
    <forces>
      <force forcefield='cp2k'/>
      <force forcefield='iqi'/>
    </forces>
    <ensemble>
      <temperature units="kelvin"> 300 </temperature>
      <pressure units='bar'> 1.0 </pressure>
    </ensemble>
    <motion mode="dynamics">
      <dynamics mode='nvt'>
        <timestep units='femtosecond'> 1 </timestep>
        <thermostat mode='langevin'>
          <tau units='femtosecond'> 200 </tau>
        </thermostat>
        <barostat mode='isotropic'>
          <tau units='femtosecond'> 500 </tau>
          <thermostat mode='langevin'>
            <tau units='femtosecond'> 500  </tau>
          </thermostat>
        </barostat>
      </dynamics>
    </motion>
  </system>
</simulation>

